{
  "name": "simplified-release",
  "version": "1.0.0",
  "author": "Martin Wheeler",
  "license": "MIT",
  "description": "A CLI tool to simplify running a release into multiple environments.",
  "bin": "lib/bin.js",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "prepare": "npm run build",
    "postinstall": "husky install && npx husky add .husky/pre-merge-commit \"simplified-release run\""
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "husky": "^8.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "chalk": "^5.3.0",
    "cli-spinners": "^2.9.1",
    "ora": "^7.0.1"
  },
  "engines": {
    "node": ">=16"
  }
}
